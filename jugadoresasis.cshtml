@{
    var titulo="PÁGINA";

    var connexion = Database.Open("jugadores");
    
    var peticion = connexion.Query("SELECT nombre,asistencias FROM plantilla ORDER BY asistencias ASC ");
    var peticion2 = connexion.Query("SELECT nombre,asistencias FROM plantilla ORDER BY asistencias DESC ");
}
<!DOCTYPE html>

<html lang="es">
    <head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>@titulo</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link rel="stylesheet" href="estilos.css">
    </head>
    <body>
         <div id="contenedor">
               @RenderPage("includes/Cabecera.cshtml")
            <section>
                   <div id="divcriterio3">
                     <table id="tablaglobal">
                        <tr>
                            <td id="tdglobaltitulo">Nombre</td>
                            <td id="tdglobaltitulo">Asistencias (ASC)</td>
                        </tr>
                    @foreach (var fila in peticion)
                    {
                        <tr>
                        <td id="tdglobalnormal"><h3>@fila.nombre</h3></td>
                        <td id="tdglobalnormal"><h3>@fila.asistencias</h3></td>
                        </tr>
                    }
                    </table>
                 </div>
                <div id="divcriterio4">
                     <table id="tablaglobal">
                        <tr>
                            <td id="tdglobaltitulo">Nombre</td>
                            <td id="tdglobaltitulo">Asistencias (DES)</td>
                        </tr>
                    @foreach (var fila in peticion2)
                    {
                        <tr>
                        <td id="tdglobalnormal"><h3>@fila.nombre</h3></td>
                        <td id="tdglobalnormal"><h3>@fila.asistencias</h3></td>
                        </tr>
                    }
                    </table>
                 </div>

                <div id="graficoasis">
                    <img src="graficoasis" alt="graficoasistencias"></img>
                </div>

            </section>
              
        </div>
    </body>
</html>
